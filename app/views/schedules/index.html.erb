<p id="notice"><%= notice %></p>

<h1>Listing Schedules</h1>

<a href="/schedules?today=support_id">Today support hero</a>
<br>
<a href="/schedules?order=support_id">Each support's schedule</a> 
<br>
<a href="/schedules?order=dateshedule">Schedule for this month</a>
<br>

<table>
  <thead>
    <tr>
    <th>Id</th>
      <th>Support</th>
      <th>Dateshedule</th>
      <th>Vacation</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @schedules.each do |schedule| %>
      <tr>
      <td><%= schedule.id %></td>
        <td><%= schedule.support.name %></td>
        <td><%= schedule.dateshedule %></td>
        <td><%= schedule.vacation %></td>
        <td><%= link_to 'Show', schedule %></td>
        <td><%= link_to 'Edit', edit_schedule_path(schedule) %></td>
        <td><%= link_to 'Destroy', schedule, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

